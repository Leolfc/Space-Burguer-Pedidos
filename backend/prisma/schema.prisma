generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model Item{
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  nome String @unique
  descricao String 
  categoria String[]
  destaque Boolean @default(false)
  indisponivel Boolean @default(false)
  preco Float   
  novoItem Boolean  @default(false)
  imagem_url String? 
  criadoEm DateTime @default(now())
}

model Usuario{
id String @id @default(auto()) @map("_id") @db.ObjectId
email String @unique
senha String
criadoEm DateTime @default(now())
}

