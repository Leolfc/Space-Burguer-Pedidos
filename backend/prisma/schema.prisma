generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model Item{
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  nome String @unique
  descricao String 
  categoria String[]
  destaque Boolean @default(false)
  indisponivel Boolean @default(false)
  preco Float   
  novoItem Boolean  @default(false)
  imagem_url String? 
  criadoEm DateTime @default(now())
}

model Usuario{
id String @id @default(auto()) @map("_id") @db.ObjectId
email String @unique
senha String
criadoEm DateTime @default(now())
}


model Admin {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  senha String
}

model Configuracao {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  lojaAberta Boolean  @default(false)
  // campo para adicionar configuração se precisar  futuramente
}

model Adicional {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  nome     String   @unique
  preco    Float
  ativo    Boolean  @default(true)
  criadoEm DateTime @default(now())
}
